{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
    },
    "ignorePatterns": ["**/*.test.js","**/*.cy.js"],
    "overrides": [
        {
          "files": ["**/*.test.js","**/*.cy.js"],
          "env": { "jest": true,"cypress/globals": true },
          "plugins": ["jest","cypress"],
          "extends": ["plugin:jest/recommended","plugin:cypress/recommended"],
          "rules": { "jest/prefer-expect-assertions": "off","cypress/no-unnecessary-waiting": "off"}
        }
      ]
}
