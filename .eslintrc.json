{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
    },
    "ignorePatterns": ["**/*.test.js","**/*.cy.js","cypress.config.js"],
    "overrides": [
        {
          "files": ["**/*.cy.js"],
          "env": { "cypress/globals": true },
          "plugins": ["cypress"],
          "extends": ["plugin:cypress/recommended"],
          "rules": {"cypress/no-unnecessary-waiting": "off"}
        },
        {
          "files": ["**/*.test.js"],
          "env": {"jest": true},
          "plugins":["jest"],
          "extends":["plugin:jest/recommended"],
          "rules":{"jest/prefer-expect-assertions": "off"}
        }
      ]
}
